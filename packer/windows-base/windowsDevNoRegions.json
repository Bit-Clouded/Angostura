  "provisioners": [
        {
            "type": "powershell",
            "script": "init.ps1"
        },
		{
			"type": "powershell",
			"inline": 
				[ 
					"C:/ProgramData/Amazon/EC2-Windows/Launch/Scripts/InitializeInstance.ps1 -Schedule", "C:/ProgramData/Amazon/EC2-Windows/Launch/Scripts/SysprepInstance.ps1 -NoShutdown" 
				]
		}
  ]
}