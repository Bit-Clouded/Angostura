{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "source_ami": "ami-034f82225dd74c8df",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "packerwindows-devtesting-{{timestamp}}",
